<!-- views/partials/toolbox.ejs -->
<div class="toolbox">
    <h1>Toolbox</h1>

    <!-- Label and x-pos/y-pos form -->
    <form>
        Label: <input type="text" id="labeltext">
        <button type="button" onclick="adjustElement()">Edit Label</button><br>
        X-Position: <input type="text" id="xpostext" readonly><br>
        Y-Position: <input type="text" id="ypostext" readonly>
    </form>

    <!-- Add Cytoscape manipulation buttons -->
    <button type="button" onclick="addNode()">Add Node</button><br>
    <button type="button" onclick="addEdge()">Add Edge</button><br>
    <button type="button" onclick="deleteElement()">Remove Element</button><br>
    <button type="button" onclick="resetViewport()">Reset Viewport</button><br>
    <button type="button" onclick="updateViewInViewCollection('<%= view.url + '/update' %>')">Save View</button>
</div>
