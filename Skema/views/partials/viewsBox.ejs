<!-- views/partials/viewsBox.ejs -->
<div>
    <h1>My Genetic Decompositions</h1>

    <!-- TODO: Add more Worlds - this would require a 'Worlds' collection in the db -->
    <div class="row">
        <!-- Views form and buttons -->
        <div class="col-2">
            <div class="form-group">
                <button type="button" class="form-control btn" onclick="addView()">Create View</button>
                <button type="button" class="form-control btn" onclick="dbDeleteView('<%= view.url + '/delete' %>')">Delete current view</button>
            </div>
        </div>

        <!-- List of worlds and their views -->
        <div id="worlds_views_list" class="col-10">
            <ul>
                <li>World</li>
                <ul>
                    <% for (let one_view of view_list) { %>
                        <% if (one_view) { %>
                            <li>View: <a href='<%= one_view.url %>'><%= one_view.name %></a></li>
                        <% } %>
                    <% } %>
                </ul>
            </ul>
        </div>
    </div>
</div>
