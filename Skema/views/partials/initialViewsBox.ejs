<!-- views/partials/initialViewsBox.ejs -->
<!-- Create the initial views box, which is displayed on views_list -->
<!-- This is necessary because the views box for the views.ejs page has a -->
<!-- create and delete button which depend on the id parameter in the URL -->
<!-- which does not exist until a view is selected. -->

<div>
    <h1>My Genetic Decompositions</h1>

    <!-- TODO: Add more Worlds - this would require a 'Worlds' collection in the db -->
    <div class="row">
        <!-- Views form and buttons -->
        <div class="col-2">
            <div class="form-group">
                <button type="button" class="form-control btn" onclick="addInitialView()">Create View</button>
            </div>
        </div>

        <!-- List of worlds and their views -->
        <div id="worlds_views_list" class="col-10">
            <ul>
                <li>World</li>
                <ul>
                    <% if (view_list.length > 0) { %>
                        <% for (let one_view of view_list) { %>
                            <% if (one_view) { %>
                                <li>View: <a href='<%= one_view.url %>'><%= one_view.name %></a></li>
                            <% } %>
                        <% } %>
                    <% } %>
                </ul>
            </ul>
        </div>
    </div>
</div>
